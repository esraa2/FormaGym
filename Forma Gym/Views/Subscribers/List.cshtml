@section scripts
{
	<script>
		$(document).ready(function () {
			var table = $("#subscribers").DataTable({
				ajax: {
					url: "/api/Subscribers",
					dataSrc: ""
				},
				columns: [
					{
						data: "name",
						render: function (data, type, subscriber) {
							return "<a href='/Subscribers/Details/" + subscriber.id + "'>" + data + "</a>";
						}
					},
					{
						data: "subscription.name"
					},
					{
						data: "id",
						render: function (data) {
							return "<button class='btn btn-def btn-link js-delete glyphicon glyphicon-trash' data-Id=" + data + "></button>";
						}
					}
				]
			});
			$("#subscribers").on("click", ".js-delete", function () {
				var button = $(this);
				bootbox.confirm("Are you sure to delete this subscriber?", function (result) {
					if (result) {
						$.ajax({
							method: "DELETE",
							url: "/api/Subscribers/" + button.attr("data-Id"),
							success: function () {
								table.row(button.parents("tr")).remove().draw();
							}
						});
					}
				});
			});
		});


	</script>


}




