@{
	ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
	
	<!-- Indicators -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner">
		<div class="item active">
			<img src="~/images/FormaGym.jpg" />
		</div>

		<div class="item">
			<img src="~/images/Forma222.jpg" />
		</div>

		<div class="item">
			<img src="~/images/forma333.jpg" />
		</div>
	</div>

	<!-- Left and right controls -->
	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

<div class="row HomeList">
	<div class="part col-md-3">
		<div class="data">
			<h2>Sports</h2>
			<p>
				Forma Gym has alot of enjoyable sports with different types like Zomba, pilates and yoga classes and also Boxing,Kong Fu and kick boxing for more info please check Forma Gym's new letters
			</p>
		</div>
	</div>


	<div class="part col-md-3">

		<div class="data">
			<h2>Activities</h2>
			<p>Forma Gym has also swimming and diving classes </p>
		</div>

		<p class="botton">
			@Html.ActionLink("Learn More", "Index", "FormaActivities", null, new { @class = "seeMore btn btn-rounded" })
		</p>
	</div>


	<div class="part col-md-3">

		<div class="data">
			<h2>Join Us now</h2>
			<p>You can easily subscribe from here </p>
		</div>

		<p class="botton">
			@Html.ActionLink("Register Now", "Register", "Account", null, new { @class = "seeMore btn btn-rounded" })
		</p>

	</div>

</div>

