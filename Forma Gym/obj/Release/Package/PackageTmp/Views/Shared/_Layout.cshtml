<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Forma Gym</title>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div id="layoutNavbar" class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Forma Gym", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div id="nav-list" class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>
						@Html.ActionLink(" Home", "Index", "Home", null, new { @class = "glyphicon glyphicon-home" })
					</li>
					<li>@Html.ActionLink(" Activities", "Index", "FormaActivities", null, new { @class = "glyphicon glyphicon-tasks" })</li>
					<li>@Html.ActionLink(" Trainers", "Index", "Subscribers", null, new { @class = "glyphicon glyphicon-pawn" })</li>
					<li>@Html.ActionLink(" Rental", "Index", "Rental", null , new {@class= "glyphicon glyphicon-th-list" })</li>
					<li>@Html.ActionLink(" About", "About", "Home", null, new { @class = "glyphicon glyphicon-info-sign" })</li>
					<li>@Html.ActionLink(" Contact", "Contact", "Home", null, new { @class = "glyphicon glyphicon-envelope" })</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>

	<div class="container body-content">
		@RenderBody()
	</div>

	<br />

	<!-- Footer -->
	<hr />
	<nav class=" navbar-wrapper navbar-fixed-bottom">
		<div class="container-fluid">
			<p class="navbar-text">&copy; @DateTime.Now.Year - Forma Gym. All rights reserved</p>
			<a href="/Account/Register" class="btn navbar-btn btn-DDD ">Subscribe</a>
		</div>
	</nav>
	<!-- Footer -->

	@Scripts.Render("~/bundles/lib")
	@RenderSection("scripts", required: false)
	<script>
		$(document).ready(function () {
			$(window).scroll(function () {
				'use strict';
				if ($(window).scrollTop() >= $('#layoutNavbar').height()) {
					$('#layoutNavbar').addClass("scrolled");
				}
				else {
					$('#layoutNavbar').removeClass("scrolled");
				}

			});
			$('.navbar-nav ').on("click", "li", function () {
				$(this).addClass('active');
			});
		});
	</script>
	</body>
</html>
